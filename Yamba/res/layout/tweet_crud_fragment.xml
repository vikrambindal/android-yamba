<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/background">

    <TextView
        android:id="@+id/txt_crud_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/lbl_crud_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_crud_charsrem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/lbl_crud_chars_remaining"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/txt_crud_msg"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:ems="10"
        android:layout_weight="1"
        android:inputType="textMultiLine" 
        android:background="#ffffff"
        android:layout_margin="5dp">
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_crud_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_crud_post"
        android:textSize="25sp" 
        android:textStyle="bold"/>

</LinearLayout>
